<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26D597"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/title" />

        <TextView
            android:id="@+id/maintxt"
            android:layout_width="501dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="¡Hola!Soy una aplicación que te ayudará a practicar 3 operaciones matematicas basicas: Suma,resta y multiplicación."
            android:textColor="#171BEB"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/imageView45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/trickall" />

        <Button
            android:id="@+id/bsuma"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="SUMA" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/trickall" />

        <Button
            android:id="@+id/bresta"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="RESTA" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/trickall" />

        <Button
            android:id="@+id/bmulti"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="MULTIPLICACIÓN" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/trickall" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/trickall" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/superhero" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>