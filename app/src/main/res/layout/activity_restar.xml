<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26D597"
    tools:context=".restar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/resta" />

        <TextView
            android:id="@+id/txtres"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#171BEB"
            android:text="En estos ejercicios el sistema te realizará preguntas al azar con números de un dígito ,por favor selecciona si prefieres el modulo con reconocimiento de voz o con entrada de texto"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/trickall" />

        <Button
            android:id="@+id/texrex"
            android:layout_width="500dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:text="TEXTO" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/trickall" />

        <Button
            android:id="@+id/voxrex"
            android:layout_width="500dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:text="VOZ" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/trickall" />

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/imagenmenus" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>